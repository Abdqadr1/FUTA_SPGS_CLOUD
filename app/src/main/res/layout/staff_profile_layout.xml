<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:background="@drawable/bg_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_linear"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Name"
            android:textColor="#270C0C"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/staff_name_text"
            android:textStyle="normal"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Abolarinwa Quadri"
            android:textColor="#270C0C"
            android:layout_weight="0.6"
            android:layout_marginStart="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_linear"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_linear"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Staff ID"
            android:textColor="#270C0C"
            android:layout_weight="0.4"/>

        <TextView
            android:textColor="#270C0C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/staff_id_text"
            android:textStyle="normal"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="2349375947"
            android:layout_weight="0.6"
            android:layout_marginStart="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dept_linear"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_linear"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Department"
            android:textColor="#270C0C"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/staff_dept_text"
            android:textStyle="normal"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Information System"
            android:layout_weight="0.6"
            android:textColor="#270C0C"
            android:layout_marginStart="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/office_linear"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dept_linear"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Office Address"
            android:textColor="#270C0C"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/staff_office_text"
            android:textStyle="normal"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="International building, FUTA"
            android:layout_weight="0.6"
            android:textColor="#270C0C"
            android:layout_marginStart="10dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>