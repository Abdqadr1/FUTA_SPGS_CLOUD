<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_round"
        android:visibility="visible">


        <LinearLayout
            android:textColor="#270C0C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_linear"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:textColor="#270C0C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Name"
                android:layout_weight="0.4"/>

            <TextView
                android:textColor="#270C0C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/student_name_text"
                android:textStyle="normal"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Abolarinwa Quadri"
                android:layout_weight="0.6"
                android:layout_marginStart="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/matric_linear"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/name_linear"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:textColor="#270C0C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Matric No"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="#270C0C"
                android:id="@+id/student_matric_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-condensed-light"
                android:text="CSC/15/4645"
                android:textSize="18sp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/program_linear"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/matric_linear"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:textColor="#270C0C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Program"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="#270C0C"
                android:id="@+id/student_program_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Computer Science"
                android:textSize="18sp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_linear"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/program_linear"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:textColor="#270C0C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Email"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="#270C0C"
                android:id="@+id/student_email_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-condensed-light"
                android:text="abolarinwaquadri@gmail.com"
                android:textSize="18sp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_linear"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/email_linear"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:textColor="#270C0C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Phone Nubmer"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="#270C0C"
                android:id="@+id/student_phone_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-condensed-light"
                android:text="08115213342"
                android:textSize="18sp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dob_linear"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/phone_linear"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">

        <TextView
            android:textColor="#270C0C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:fontFamily="sans-serif-condensed-light"
            android:text="D.O.B"
            android:textSize="18sp"
            android:textStyle="bold" />

            <TextView
                android:textColor="#270C0C"
                android:id="@+id/student_dob_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-condensed-light"
                android:text="12/08/1996"
                android:textSize="18sp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_linear"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/dob_linear"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">

        <TextView
            android:textColor="#270C0C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Address"
            android:textSize="18sp"
            android:textStyle="bold" />

            <TextView
                android:textColor="#270C0C"
                android:id="@+id/student_address_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-condensed-light"
                android:text="N0 28, Alaba layout, FUTA south gate"
                android:textSize="18sp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/award_year_linear"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/address_linear"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:textColor="#270C0C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Year of Award"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="#270C0C"
                android:id="@+id/student_award_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-condensed-light"
                android:text="2020"
                android:textSize="18sp"
                android:textStyle="normal" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
